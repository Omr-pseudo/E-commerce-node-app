extends ../layouts/main-layout.pug

block content
    main(class="flex flex-col items-center mt-20")
                    div(class="block box-content bg-gray-50 h-96 w-80 shadow-xl rounded-xl")
                        form(action="/new-password" method="POST")
                            div(class="flex flex-col my-24")
                                div(class="flex flex-col  items-center gap-12")
                                    div(class="flex flex-col gap-8")
                                        div(class="flex flex-row mx-12 items-center gap-6")
                                                        label(class="pl-4 text-mono font-medium" for="password") New Password
                                                        input(class="ring-2 ring-gray-300 rounded-md pl-4 text-mono shadow-lg font-medium" placeholder="type here..." type="password" name="password" id="password")
                                        div(class="flex flex-row mx-12 items-center gap-6")                
                                                        label(class="pl-4 text-mono font-medium" for="confirm") Confirm Password
                                                        input(class="ring-2 ring-gray-300 rounded-md pl-4 text-mono shadow-lg font-medium" placeholder="type here..." type="password" name="confirm" id="confirm")
                                                        
                                    input(type="hidden" name="userId" value=userId)
                                    input(type="hidden" name="passwordToken" value=passwordToken)               
                                    input(type="hidden" name="_csrf" value=csrfToken)
                                    button(class="font-mono font-semibold mx-6" type="submit")
                                        span(class="block box-content rounded-md ring-2 hover:ring-blue-500 bg-blue-200 shadow-lg h-ful w-full px-1 hover:scale-105 hover:bg-blue-500 hover:text-slate-50 hover:shadow-2xl") UPDATE PASSWORD
                                if errorMessage
                                        div(class="block box-content text-center bg-red-200 mt-10 h-9/12 w-11/12 shadow-xl rounded-sm ring-2 ring-red-400")
                                            p(class="text-xs md:text-sm font-mono text-gray-800") #{errorMessage}

                                